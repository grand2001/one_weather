<%= form_with url: item_genres_path, local: true, method: :get do |f| %>
 <div class="flex align-items-center">
  <div class="px-3">ジャンル検索　<%= f.collection_select :genre, @genres, :id, :name, options = { selected: 1, required: true}, class: "" %></div>
  <div><%= f.submit "検索", class: "btn btn-primary" %></div>
 </div>
<% end %>

<div class="m-5">
 <h2>いいね一覧</h2>
 <h5>(全投稿<%= @favorites.count %>件)</h5>
</div>
   <div class="flex item-width">
    <% @favorites.each do |favorite| %>
     <div class="px-5">
      <% if favorite.item.customer.is_deleted == true %>
       <div class=""><%= image_tag 'no_image', size: "200x150" %></div>
       <div>この投稿のアカウントは<br>凍結されています</div>
       <div class="ml-2"><%= link_to "いいねを外す", item_favorites_path(favorite.item), method: :delete, class: 'btn btn-danger' %></div>
      <% else %>
       <div class="">
        <% if favorite.item.image.attached? %>
         <%= image_tag favorite.item.image, size: "200x150" %>
        <% else %>
         <%= image_tag 'no_image', size: "200x150" %>
        <% end %>
       </div>
       <div class="">投稿者：<%= link_to favorite.item.customer.name, customer_path(favorite.item.customer.id) %></div>
       <div class="">投稿名：<%= link_to favorite.item.name, item_path(favorite.item) %></div>
       <div class="">ジャンル：<%= favorite.item.genre.name %></div>
       <div class="">♥<%= favorite.item.favorites.count %> いいね</div>
       <div><%= link_to "#{favorite.item.comments.count} コメント", item_path(favorite.item.id) %></div>
      <% end %>
     </div>
    <% end %>
   </div>
   <div class="item-pagi"><%= paginate @favorites %></div>
