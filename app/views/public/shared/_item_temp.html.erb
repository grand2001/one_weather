<% item.each do |item| %>
 <div class="px-5 item">
  <div class="item-img">
   <% if item.image.attached? %>
    <%= image_tag item.image, class: "item-img-cover" %>
   <% else %>
    <%= image_tag asset_path('no_image.jpg'), class: "item-img-cover" %>
   <% end %>
  </div>
  <div class="">投稿者：<%= link_to item.customer.name, customer_path(item.customer.id) %></div>
  <div class="">投稿名：<%= link_to item.name, item_path(item.id) %></div>
  <div class="">ジャンル：<%= item.genre.name %></div>
  <div class="">♥<%= item.favorites.count %> いいね</div>
  <div><%= link_to "#{item.comments.count} コメント", item_path(item.id) %></div>
 </div>
<% end %>