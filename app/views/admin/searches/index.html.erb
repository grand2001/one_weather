<div>
 <h2 class="ml-5">検索結果</h2>
  <% if @range == "Customer" %>
   <div class="ml-5">
      <h5>(全会員<%= @customer.count %>件)</h5>
      <% @customers.each do |customer| %>
       <div class="py-2">
        <%= link_to customer.name, admin_customer_path(customer.id) %>
       </div>
      <% end %>
      <div class="customer-pagi"><%= paginate @customers %></div>
   </div>
  <% else %>
   <h5 class="ml-5">(全投稿<%= @item.count %>件)</h5>
    <div class="flex item-width">
     <% @items.each do |item| %>
      <div class="px-5 item">
       <div>
        <% if item.image.attached? %>
         <%= image_tag item.image, size: "200x150" %>
        <% else %>
         <%= image_tag asset_path('no_image.jpg'), size: "200x150" %>
        <% end %>
       </div>
       <div>投稿者名：<%= link_to item.customer.name, admin_customer_path(item.customer.id) %></div>
       <div>投稿名：<%= item.name %></div>
       <div>ジャンル：<%= item.genre.name %></div>
       <div class="">♥<%= item.favorites.count %> いいね</div>
       <div><%= link_to "#{item.comments.count} コメント", admin_item_path(item.id) %></div>

      </div>
     <% end %>
       <div class="item-pagi"><%= paginate @items %></div>
    </div>
  <% end %>
</div>
