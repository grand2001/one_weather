<p id="notice"></p>
<% if @customer.errors.any? %>
 <div id="error_explanation">
  <ul style="color: red">
   <h3 class="mt-5 ml-5"><%= @customer.errors.count %> error prphibited this obj from being saced:</h3>
   <% @customer.errors.full_messages.each do |message| %>
    <li class="mt-3 ml-5"><%= message %></li>
   <% end %>
  </ul>
 </div>
<% end %>

 <h2 class="mx-5"><%= @customer.name %>さんの会員情報編集</h2>
 <div class="px-5">
  <div class="">会員ID：<%= @customer.id %></div>
 </div>

<div class="mx-5">
 <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
  <div class="field mt-3">
   <div><%= f.label :name , "氏名", class: "" %></div>
   <div><%= f.text_field :name, autofocus: true, autocomplete: "name", class: "" %></div>
  </div>

  <div class="field mt-3">
   <div><%= f.label :email , "メールアドレス", class: "" %></div>
   <div><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>

  <div class="flex mt-4">
   <div class="">会員ステータス</div>
   <div class="ml-1"><%= f.radio_button :is_deleted, false %>有効</div>
   <div class="ml-1"><%= f.radio_button :is_deleted, true %>凍結</div>
  </div>

  <div class="actions flex">
    <div class=""></div>
    <div class="mt-4"><%= f.submit "変更を保存", class: 'btn btn-success' %></div>
  </div>
 <% end %>
</div>