<%= form_with url: admin_item_genres_index_path, local: true, method: :get do |f| %>
 <div class="flex align-items-center">
  <div class="px-3">ジャンル検索　<%= f.collection_select :genre, @genre, :id, :name, options = { selected: 1, required: true}, class: "" %></div>
  <div><%= f.submit "検索", class: "btn btn-primary" %></div>
 </div>
<% end %>

<p id="notice"></p>
<% if @genre_new.errors.any? %>
 <div id="error_explanation">
  <ul style="color: red">
   <h3 class="mt-5 ml-5"><%= @genre_new.errors.count %> error prphibited this obj from being saced:</h3>
   <% @genre_new.errors.full_messages.each do |message| %>
    <li class="mt-3 ml-5"><%= message %></li>
   <% end %>
  </ul>
 </div>
<% end %>

<div class="ml-5">
 <h3 class="">ジャンル一覧・追加</h3>
</div>

<%= form_with model: @genre_new, url: admin_genres_path do |f| %>
 <div class="ml-5">
  <div class="flex my-2 align-items-center">
   <div class=""><%= f.label :name, "ジャンル名" %></div>
   <div class="mx-2"><%= f.text_field :name %></div>
   <div class="mx-2"><%= f.submit '新規登録', class: 'btn btn-primary' %></div>
  </div>
 </div>
<% end %>

<div class="ml-5">
 <div class=""><h4>ジャンル名</h4></div>
  <% @genres.each do |genre| %>
   <div class="flex align-items-center mt-3">
    <div class=""><%= genre.name %></div>
    <div class="ml-3"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></div>
   </div>
  <% end %>
  <div class="customer-pagi">
   <%= paginate @genres %>
  </div>
</div>