<%= form_with url: admin_item_genres_index_path, local: true, method: :get do |f| %>
 <div class="flex align-items-center">
  <div class="px-3">ジャンル検索　<%= f.collection_select :genre, @genres, :id, :name, options = { selected: 1, required: true}, class: "" %></div>
  <div><%= f.submit "検索", class: "btn btn-primary" %></div>
 </div>
<% end %>

<div class="m-5">
 <h2>投稿一覧</h2>
 <h5>(全投稿<%= @item.count %>件)</h5>
</div>

 <div class="flex item-width">
  <%= render 'admin/shared/item_temp_admin', item: @items %>
 </div>
 <div class="item-pagi"><%= paginate @items %></div>