<%= form_with url: admin_item_genres_index_path, local: true, method: :get do |f| %>
 <div class="flex align-items-center">
  <div class="px-3">ジャンル検索　<%= f.collection_select :genre, @genres, :id, :name, options = { selected: 1, required: true}, class: "" %></div>
  <div><%= f.submit "検索", class: "btn btn-primary" %></div>
 </div>
<% end %>

<div class="m-5">
 <h2>ジャンル：<%= @genre.name %>の投稿一覧</h2>
 <h5>(全投稿<%= @items.count %>件)</h5>
</div>

 <div class="flex item-width">
  <% @items.each do |item| %>
  <div class="px-5 item">
   <div class="">
    <% if item.image.attached? %>
     <%= image_tag item.image, size: "200x150" %>
    <% else %>
     <%= image_tag 'no_image', size: "200x150" %>
    <% end %>
   </div>
   <div class="">投稿者：<%= link_to item.customer.name, admin_customer_path(item.customer.id) %></div>
   <div class="">投稿名：<%= link_to item.name, admin_item_path(item.id) %></div>
   <div class="">ジャンル：<%= item.genre.name %></div>
   <div class="">♥<%= item.favorites.count %> いいね</div>
   <div><%= link_to "#{item.comments.count} コメント", admin_item_path(item.id) %></div>
  </div>
  <% end %>
 </div>
 <div class="item-pagi"><%= paginate @items %></div>