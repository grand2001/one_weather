<% item.each do |item| %>
 <div class="px-5 item">
  <div class="item-index-img">
   <% if item.image.attached? %>
    <%= image_tag item.image %>
   <% else %>
    <%= image_tag asset_path('no_image.jpg') %>
   <% end %>
  </div>
  <div class="">投稿者：<%= link_to item.customer.name, admin_customer_path(item.customer.id) %></div>
  <div class="">投稿名：<%= link_to item.name, admin_item_path(item.id) %></div>
  <div class="">ジャンル：<%= item.genre.name %></div>
  <div class="">♥<%= item.favorites.count %> いいね</div>
  <div><%= link_to "#{item.comments.count} コメント", admin_item_path(item.id) %></div>
 </div>
<% end %>